<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".q7">

    <!-- Edit Text-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ecf0f1"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- 7-8-9-x-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q7_btn7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="7"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btn8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="8"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btn9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="9"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btnmul"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="x"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 4-5-6- - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q7_btn4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="4"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btn5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="5"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btn6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="6"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btnsub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="-"
            android:textColor="#ecf0f1"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 1-2-3-/-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q7_btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="1"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="2"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="3"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btndiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="/"
            android:textColor="#ecf0f1"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- .-0-%-+-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q7_btnDot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="."
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btn0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="0"
            android:textColor="#ecf0f1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btnRemainder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="%"
            android:textColor="#ecf0f1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/q7_btnadd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="0.25"
            android:text="+"
            android:textColor="#ecf0f1"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- = -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q7_btneql"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="="
            android:textColor="#ecf0f1"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>